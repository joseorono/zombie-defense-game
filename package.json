{
  "name": "zombie-defense-game",
  "description": "Horror-themed Base Builder/Management Game",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseorono/zombie-defense-game.git"
  },
  "author": "Exologic Team <joseomaker@gmail.com> (https://exologic.agency/)",
  "license": "GPL-3.0-only",
