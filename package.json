  "bugs": {
    "url": "https://github.com/joseorono/zombie-defense-game/issues"
  },
  "homepage": "https://github.com/joseorono/zombie-defense-game#readme",
  "keywords": [
    "react",
    "vite",
    "typescript"
  ],
  "scripts": {
    "test-cli": "vitest --run --reporter verbose",
    "test": "vitest --ui",
    "test-filter": "vitest --reporter verbose --testNamePattern",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier-format": "prettier --config .prettierrc --write src/**/*.ts src/**/*.tsx spec/**/*.ts",
    "prettier-watch": "onchange src/**/*.ts src/**/*.tsx spec/**/*.ts -- prettier --write {{changed}}",
    "dev": "vite",
    "dev-expose-host": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "visualize-bundle": "vite-bundle-visualizer & vite-bundle-visualizer -t sunburst & vite-bundle-visualizer -t network",
    "check-updates": "ncu",
    "update-deps": "ncu -u && npm install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@pixi/react": "^7.1.2",
    "@pixi/sound": "^6.0.1",
    "@radix-ui/react-dialog": "^1.1.1",
